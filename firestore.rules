rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Properties are publicly readable, but only the owner can write.
    match /properties/{propertyId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // User profiles are publicly readable for displaying owner info, but only the user can modify their own profile.
    match /users/{userId} {
      allow get: if true;
      // Allow a user to update their own document, including just their wishlist.
      allow update: if request.auth != null && request.auth.uid == userId;
      // Prevent users from creating documents for others.
      allow create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
